<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.github.stazxr.zblog</groupId>
        <artifactId>zblog-parent</artifactId>
        <version>4.1.0_u2</version>
    </parent>

    <artifactId>zblog-component</artifactId>
	<packaging>pom</packaging>

    <name>zblog-component</name>
    <description>ZBLOG 组件库</description>

    <modules>
        <!-- 表达式组件 -->
        <module>zblog-jexl</module>
        <!-- 脱敏组件 -->
        <module>zblog-mask</module>
        <!-- 加解密组件 -->
        <module>zblog-encryption</module>
        <!-- 缓存组件 -->
        <module>zblog-cache</module>
        <!-- 参数配置组件 -->
        <module>zblog-props</module>
        <!-- 序列号组件 -->
        <module>zblog-sequence</module>
        <!-- 上下文组件 -->
        <module>zblog-context</module>
        <!-- 消息组件 -->
        <module>zblog-notify</module>
        <!-- 图形验证码组件 -->
        <module>zblog-captcha</module>
    </modules>

    <dependencies>
        <!-- ZBLOG 公共模块 -->
        <dependency>
            <groupId>com.github.stazxr.zblog</groupId>
            <artifactId>zblog-common</artifactId>
        </dependency>
    </dependencies>
</project>
